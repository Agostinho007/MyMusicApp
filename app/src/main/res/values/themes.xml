<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyMusicApp" parent="Theme.Material3.Dark.NoActionBar">

        <item name="colorPrimary">@color/black</item>


    </style>

    <style name="ThemeOverlay.App.AlertDialog.Destructive" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/delete_red</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.TextButton.Dialog.Negative</item>

    </style>

    <style name="Widget.App.Button.TextButton.Dialog.Negative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.AlertDialog.Input" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.TextButton.Dialog.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.TextButton.Dialog.Cancel</item>
    </style>

    <style name="Widget.App.Button.TextButton.Dialog.Positive" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Button.TextButton.Dialog.Cancel" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.AlertDialog.Neutral" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.TextButton.Dialog.Positive</item>
    </style>

    <style name="App.Theme.SearchView" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/white</item>

        <item name="android:textColorHint">@color/hint_grey</item>

        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.MyMusicApp" parent="Base.Theme.MyMusicApp" />
</resources>